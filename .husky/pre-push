#!/bin/sh

cd panel

# Type checking (catches type errors before push)
echo "Running type check..."
pnpm check || {
  echo "❌ Type check failed"
  exit 1
}

# Lint check (no auto-fix on push, just verify)
echo "Running lint..."
pnpm lint || {
  echo "❌ Lint check failed"
  exit 1
}

# Run tests (critical - must pass before push)
echo "Running tests..."
pnpm test || {
  echo "❌ Tests failed"
  exit 1
}

echo "✅ All checks passed! Ready to push."
